@using SouqElGomalAdmin.Controllers

@using SouqElGomalAdmin.Repository

@using SouqElGomalAdmin.ViewModels
@{



    adminModel x = admin.GetAll().FirstOrDefault(i => i.email == adminController.currentAdmin);
    if (x.name == null) // error here
    {
        x.name = "Profile";
    }
}
<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css">
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SougEl-Gomla Admin</title>
    <style>
        @@import url('https://fonts.googleapis.com/css2?family=Open+Sans&display=swap');

        li > a {
            padding: 4px 0;
        }

        * {
            list-style: none;
            text-decoration: none;
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Open Sans', sans-serif;
        }

        body {
            background: #212529;
        }

        .wrapper .sidebar {
            background: #212529;
            position: fixed;
            top: 0;
            left: 0;
            width: 225px;
            height: 100%;
            padding: 20px 0;
            transition: all 0.5s ease;
            z-index: 1000;
        }

            .wrapper .sidebar .profile {
                margin-bottom: 30px;
                text-align: center;
            }

                .wrapper .sidebar .profile img {
                    display: block;
                    width: 100px;
                    height: 100px;
                    border-radius: 50%;
                    margin: 0 auto;
                }

                .wrapper .sidebar .profile h3 {
                    color: #ffffff;
                    margin: 10px 0 5px;
                }

                .wrapper .sidebar .profile p {
                    color: rgb(206, 240, 253);
                    font-size: 14px;
                }

            .wrapper .sidebar ul li a {
                display: block;
                padding: 13px 30px;
                color: rgb(241, 237, 237);
                font-size: 16px;
                position: relative;
            }

                .wrapper .sidebar ul li a .icon {
                    color: #dee4ec;
                    width: 30px;
                    display: inline-block;
                }



                .wrapper .sidebar ul li a:hover,
                .wrapper .sidebar ul li a.active {
                    color: #0c7db1;
                    background: #ed872f;
                    border-right: 2px solid rgb(5, 68, 104);
                }

                    .wrapper .sidebar ul li a:hover .icon,
                    .wrapper .sidebar ul li a.active .icon {
                        color: #0c7db1;
                    }

                    .wrapper .sidebar ul li a:hover:before,
                    .wrapper .sidebar ul li a.active:before {
                        display: block;
                    }

        .wrapper .section {
            width: calc(100% - 225px);
            margin-left: 225px;
            transition: all 0.5s ease;
        }

            .wrapper .section .top_navbar {
                background: #212529;
                height: 50px;
                /* display: flex;*/
                align-items: center;
                padding: 0 30px;
            }

                .wrapper .section .top_navbar .hamburger a {
                    font-size: 28px;
                    color: #f4fbff;
                }

                    .wrapper .section .top_navbar .hamburger a:hover {
                        color: #a2ecff;
                    }



        body.active .wrapper .sidebar {
            left: -225px;
        }

        body.active .wrapper .section {
            margin-left: 0;
            width: 100%;
        }

        #logo {
            width: 130px;
            margin: 0 auto;
            align-self: center;
        }

        .iconPic {
            width: 30px !important;
            padding: 5px 0;
            display: none;
            margin: 0 auto;
        }

        @@media(min-width: 768px) and (max-width: 1025px) {
            .wrapper .section .top_navbar {
                display: block;
                z-index: 1001;
            }
        }

        @@media(min-width: 381px) and (max-width: 767px) {
            .wrapper .section .top_navbar {
                display: block;
                z-index: 1001;
            }
        }
    </style>
</head>
<body>

    <div class="wrapper">
        <div class="section">
            <div class="top_navbar">
                <div class="hamburger" onclick="nav()">
                    <a href="#">
                        <i class="fas fa-bars"></i>
                    </a>
                </div>
            </div>

        </div>
        <div class="sidebar">

            <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-white text-decoration-none">
                @* <img id="logo" src="~/pics/whiteLogo-04.png" style="" />*@
                @*<img id="logo" src="~/pics/slogan.png" />*@
                <img id="logo" src="~/pics/souqText.png" />
            </a>

            <hr style="color:white;" />

            <ul class="nav nav-pills flex-column mb-auto" style=" overflow: auto;">

                <li>
                    <a href="/Home/index" class="nav-link text-white " id="Dashboard">Dashboard</a>
                </li>

                <hr style="color: white; width: 70%; margin: 0;" />

                <li>

                    <a href="/product/Index" class="nav-link text-white " id="Show_Products">Show Products</a>
                </li>
                <li>
                    <a href="/product/Add_product" class="nav-link text-white" id="Add_Products">Add Product</a>
                </li>

                <hr style="color: white; width: 70%; margin: 0;" />

                <li>
                    <a href="/categories/Index" class="nav-link text-white" id="Show_Categories">Show Categories</a>
                </li>
                <li>
                    <a href="/categories/Add_category" class="nav-link text-white" id="Add_Categories">Add Category</a>
                </li>

                <hr style="color: white; width: 70%; margin: 0;" />

                <li>
                    <a href="/users/Index" class="nav-link text-white" id="Show_Users">Show Users</a>
                </li>

                <hr style="color: white; width: 70%; margin: 0;" />

                <li>
                    <a href="/order/Index" class="nav-link text-white" id="Show_Orders">Show Orders</a>
                </li>

                <hr style="color:white; width:70%; margin:0;" />

                <li>
                    <a href="/admin/Index" class="nav-link text-white" id="Show_Admins">Show Admins</a>
                </li>
                <li>
                    <a href="/admin/addAdmin" class="nav-link text-white" id="Add_Admins">Add Admins</a>
                </li>


            </ul>

            <hr style="color:white; width:100%;margin-top:20px;" />

            <div class="dropdown" style="width:80%; height:10%;">
                <a href="#" class="d-flex align-items-center text-white text-decoration-none dropdown-toggle" id="dropdownUser1" data-bs-toggle="dropdown" aria-expanded="false">


                    <b style="width: 100%; margin-left:10%;">@x.name</b>

                </a>
                <ul class="dropdown-menu dropdown-menu-dark text-small shadow" aria-labelledby="dropdownUser1">
                    <li><a class="dropdown-item" href="/admin/Edit_admin">Setting</a></li>
                    <li><hr class="dropdown-divider"></li>
                    <li><a class="dropdown-item" href="/admin/logout">Sign out</a></li>
                </ul>
            </div>
        </div>

    </div>
    <script>

        function nav() {
            document.querySelector("body").classList.toggle("active");
        }
    </script>
</body>
</html>