@using SouqElGomalAdmin.ViewModels
@model adminModel

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="Mark Otto, Jacob Thornton, and Bootstrap contributors">
    <meta name="generator" content="Hugo 0.88.1">
    <title>SougEl-Gomla Admin</title>

    <link rel="canonical" href="https://getbootstrap.com/docs/5.1/examples/sidebars/">

    <!-- CSS W3 Animation -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">

    <!-- Bootstrap core CSS -->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />

    <!-- Bootstrap Custom styles for this template -->
    <link href="sidebars.css" rel="stylesheet">

    <style>
        #formcontainer {
            margin: 0 auto;
        }
        .field-validation-error{
            color:red;
        }
    </style>

</head>
<!------------------------------------------------------------------------------------------------->
<body style=" background-color: #DEDEDE " class="active">

    <div class="row">

        <div >
            @Html.Partial("_SideBar2");
        </div>

        <div class="col-12">

            <!--add Category-->

            <div class="row">
                <!-- main -->
                <div class="col-12 col-md-10 mt-2 mb-2 border border-1 rounded" id="formcontainer" style="background-color: #FFF ">
                    <h4 class="mt-4">EDIT</h4>
                    <hr />

                    @using (Html.BeginForm("Edit_admin", "admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {

                        @Html.TextBoxFor(i => i.id, new { Type = "hidden" });


                        @Html.LabelFor(i => i.name);
                        @Html.TextBoxFor(i => i.name, new { @class = "form-control", required = "required" });
                        @Html.ValidationMessageFor(i => i.name);
                        <br />

                        @Html.LabelFor(i => i.email);
                        @Html.TextBoxFor(i => i.email, new { type = "email", placeholder = "example@mail.ru", @class = "form-control", required = "required" });
                        @Html.ValidationMessageFor(i => i.email);
                        <br />

                        @Html.LabelFor(i => i.password);
                        @Html.PasswordFor(i => i.password, new { @class = "form-control", required = "required" });
                        @Html.ValidationMessageFor(i => i.password);
                        <br />

                        @Html.LabelFor(i => i.Confirmpassword);
                        @Html.PasswordFor(i => i.Confirmpassword, new { @class = "form-control", required = "required" });
                        @Html.ValidationMessageFor(i => i.Confirmpassword);
                        <br />
                        <div style="color:red;">@ViewBag.psaaMatch</div>
                        <br />

                        @Html.LabelFor(i => i.mobile);
                        @Html.TextBoxFor(i => i.mobile, new { @class = "form-control", type = "number" , min="0", maxlength = "11", required = "required", placeholder="01234567890" });
                        @Html.ValidationMessageFor(i => i.mobile);
                        <br />

                        @Html.LabelFor(i => i.Address);
                        @Html.TextBoxFor(i => i.Address, new { @class = "form-control", required = "required" });
                        @Html.ValidationMessageFor(i => i.Address);

                        <br />
                        <br />

                        <input type="submit" value="Edit" class="btn btn-primary" style="background-color:darkorange; margin:10px 0; border:1px solid darkorange" />
                    }

                </div>
            </div>

        </div>

    </div>
    <!------------------------------------------------------------------------------------------------->
    <!--Bootstrap js-->
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
    <script>
            /* global bootstrap: false */
            (function () {
                'use strict'
                var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
                tooltipTriggerList.forEach(function (tooltipTriggerEl) {
                    new bootstrap.Tooltip(tooltipTriggerEl)
                })
            })()

    </script>

    <!------------------------------------------------------------------------------------------------->

</body>
</html>
