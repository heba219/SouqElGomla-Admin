<body style=" background-color: #DEDEDE " onload="BarFunction();">
    <div class="row">

        <div class="col-2">
            @Html.Partial("_SideBar");

        </div>

        <div class="col-10">

            <!--Get Users-->
            <div class="row">
                <div class="col-12 col-md-10 mt-2 mb-2 border border-1 rounded" id="formcontainer" style="background-color: #fff">
                    <h4 class="mt-4">Users</h4>


                    <hr />

                    @using (Html.BeginForm("Index","users",FormMethod.Get, new {@class="form-control"}))
                    {
                        <b>Search By: </b> @Html.RadioButton("SearchBy", "ID") <text>ID</text>
                                            @Html.RadioButton("SearchBy", "Name",true) <text>Name</text>  <br />
                                             <span><input type="text" placeholder="Search" name="Search" class="form-control" style="width:300px; float:left;" /></span>
                                             <span><input type="submit" value="Search" class="btn btn-primary"/></span>
                    }
                    <hr />

                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Name</th>
                                <th>Image</th>
                                <th>Details</th>
                                <th>Delete</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var i in Model)
                            {
                                if (i.Image != null)
                                {
                                    var base64 = Convert.ToBase64String(i.Image);
                                    var imgsrc = string.Format("data:image/gif; base64,{0}", base64);


                                    <tr>
                                        <td>@i.ID</td>
                                        <td>@i.Name</td>
                                        <td>
                                            <img src="@imgsrc" style="max-width: 100px; max-height: 100px; border:solid 1px gray;" />
                                        </td>
                                        <th>@Html.ActionLink("Details", "UserDetails", new { id = i.ID }, new { @class = "btn btn-primary" })</th>
                                        <th>@Html.ActionLink("Delete", "Delete_User", new { id = i.ID }, new { @class = "btn btn-primary  delete" })</th>

                                    </tr>
                                }

                                else
                                {
                                    <tr>
                                        <td>@i.ID</td>
                                        <td>@i.Name</td>
                                        <td><div style="width:100px; height:100px; background-color:gray;"></div></td>
                                        <th>@Html.ActionLink("Details", "UserDetails", new { id = i.ID }, new { @class = "btn btn-primary" })</th>
                                        <th>@Html.ActionLink("Delete", "Delete_User", new { id = i.ID }, new { @class = "btn btn-primary  delete" })</th>

                                    </tr>
                                }
                            }

                        </tbody>
                    </table>
                    <div id="Buttons">
                        @Html.PagedListPager(Model, page => Url.Action("Index", new { page })) @*Buttons of pages*@
                    </div>
                </div>
            </div>
            
        </div>
    </div>
    <script>
        function BarFunction() {
            document.getElementById('Show_Users').setAttribute("class", "nav-link text-white active");
        }
    </script>

    <!------------------------------------------------------------------------------------------------->
    <!--Bootstrap js-->
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
    <script>
        /* global bootstrap: false */
        (function () {
            'use strict'
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
            tooltipTriggerList.forEach(function (tooltipTriggerEl) {
                new bootstrap.Tooltip(tooltipTriggerEl)
            })
        })()

    </script>


    <!------------------------------------------------------------------------------------------------->
</body>
</html>
